{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "useDefineForClassFields": true,
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@@api/*": ["../backend/src/*"]
        }
    },

    "include": ["src"]
}
